<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayGameAll"
    android:background="@drawable/level">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your level"
        android:textSize="32sp"
        android:textColor="#000000"
        android:id="@+id/yourlevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"
        android:id="@+id/line_id2"/>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_id2"
        app:layout_constraintBottom_toTopOf="@id/line_id4"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text=" 1 - level"
            android:textSize="32dp"
            android:id="@+id/level_1"
            android:fontFamily="monospace"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:text=" 2 - level"
            android:textSize="32sp"
            android:id="@+id/level_2"
            android:fontFamily="monospace"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text=" 3 - level"
            android:textSize="32sp"
            android:id="@+id/level_3"
            android:fontFamily="monospace"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text=" 4 - level"
            android:textSize="32sp"
            android:id="@+id/level_4"
            android:fontFamily="monospace"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text=" 5 - level"
            android:textSize="32sp"
            android:fontFamily="monospace"
            android:id="@+id/level_5"
            />

    </RadioGroup>

    <Button
        android:textSize="24sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:text="about level"
        android:background="@drawable/buttonstyle"
        android:fontFamily="monospace"
        android:id="@+id/id_aboutlevel"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        android:id="@+id/line_id4"/>

    <Button
        android:background="@drawable/buttonstyle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_aboutlevel"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:text="Play"
        android:id="@+id/playgame"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose"
        android:textColor="#000000"
        android:textSize="32sp"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yourlevel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>